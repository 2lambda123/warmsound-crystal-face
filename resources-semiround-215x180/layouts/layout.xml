<layout id="WatchFace">
	<!-- GoalMeterMask covers enter background area -->
	<!-- drawable class="Background" /-->

	<drawable id="LeftGoalMeter" class="GoalMeter">
		<param name="side">:left</param>
		<param name="shape">:arc</param>
		<param name="stroke">6</param>
		<param name="height">180</param>
		<param name="separator">2</param>
	</drawable>

	<drawable id="RightGoalMeter" class="GoalMeter">
		<param name="side">:right</param>
		<param name="shape">:arc</param>
		<param name="stroke">6</param>
		<param name="height">180</param>
		<param name="separator">2</param>
	</drawable>

	<drawable class="GoalMeterMask">
		<param name="stroke">6</param>
	</drawable>

	<label id="LeftGoalIcon" text="0" x="44" y="146" font="@Fonts.IconsFont" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_LEFT"/>
	<label id="LeftGoalCurrent" text="3500" x="67" y="148" font="@Fonts.NormalFont" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_LEFT | Gfx.TEXT_JUSTIFY_VCENTER"/>
	<label id="LeftGoalMax" text="5000" x="67" y="164" font="@Fonts.NormalFont" color="Gfx.COLOR_LT_GRAY" justification="Gfx.TEXT_JUSTIFY_LEFT | Gfx.TEXT_JUSTIFY_VCENTER"/>


	<label id="RightGoalIcon" text="1" x="171" y="146" font="@Fonts.IconsFont" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_RIGHT"/>
	<label id="RightGoalCurrent" text="6" x="148" y="148" font="@Fonts.NormalFont" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_RIGHT | Gfx.TEXT_JUSTIFY_VCENTER"/>
	<label id="RightGoalMax" text="10" x="148" y="164" font="@Fonts.NormalFont" color="Gfx.COLOR_LT_GRAY" justification="Gfx.TEXT_JUSTIFY_RIGHT | Gfx.TEXT_JUSTIFY_VCENTER"/>

	<label id="LeftFieldIcon" text="3" x="68" y="13" font="@Fonts.IconsFont" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>
	<label id="LeftFieldValue" text="0" x="68" y="32" font="@Fonts.NormalFont" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>

	<label id="CenterFieldIcon" text="4" x="108" y="13" font="@Fonts.IconsFont" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>
	<label id="CenterFieldValue" text="75%" x="108" y="32" font="@Fonts.NormalFont" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>

	<label id="RightFieldIcon" text="5" x="147" y="13" font="@Fonts.IconsFont" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>
	<label id="RightFieldValue" text="0" x="147" y="32" font="@Fonts.NormalFont" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>

	<drawable id="Date" class="DateLine">
		<param name="y">55</param>
	</drawable>

	<label id="Bluetooth" text="8" x="28" y="90" font="@Fonts.IconsFont" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>

	<drawable id="Time" class="ThickThinTime">
		<param name="secondsX">145</param>
		<param name="secondsY">109</param>
		
		<!-- Partial updates not supported -->		
		<!-- param name="secondsClipY">117</param-->
		<!-- param name="secondsClipWidth">22</param-->
		<!-- param name="secondsClipHeight">15</param-->
	</drawable>

	<drawable id="MoveBar" class="MoveBar">
		<param name="x">48</param>
		<param name="y">126</param>
		<param name="width">87</param>
		<param name="height">7</param>
		<param name="separator">3</param>
	</drawable>
	
</layout>