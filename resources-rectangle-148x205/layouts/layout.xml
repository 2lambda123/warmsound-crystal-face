	<label id="RightFieldValue" text="0" x="115" y="30" font="@Fonts.NormalFont" color="Gfx.COLOR_WHITE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>

	<drawable id="Date" class="DateLine">
		<param name="y">51</param>
	</drawable>

	<label id="Bluetooth" text="8" x="30" y="102" font="@Fonts.IconsFont" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>

	<drawable id="Time" class="ThickThinTime">
		<param name="verticalOffset">6</param> 

		<param name="secondsX">102</param>
		<param name="secondsY">115</param>

		<!-- Partial updates not supported -->	
		<!-- param name="secondsClipY">124</param-->
		<!-- param name="secondsClipWidth">22</param-->
		<!-- param name="secondsClipHeight">15</param-->
	</drawable>

	<drawable id="MoveBar" class="MoveBar">
		<param name="x">33</param>
		<param name="y">152</param>
		<param name="width">85</param>
		<param name="height">7</param>
		<param name="separator">3</param>
