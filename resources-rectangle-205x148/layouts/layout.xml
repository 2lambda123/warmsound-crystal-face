		<param name="x">14</param>		
		<param name="y">16</param>
		<param name="yLine2">35</param>
	</drawable>

	<label id="Bluetooth" text="8" x="103" y="130" font="@Fonts.IconsFont" color="Gfx.COLOR_BLUE" justification="Gfx.TEXT_JUSTIFY_CENTER | Gfx.TEXT_JUSTIFY_VCENTER"/>

	<drawable id="Time" class="ThickThinTime">
		<param name="secondsX">157</param>
		<param name="secondsY">67</param>
